<compiz>
	<plugin name="multitouch" useBcop="true">
		<short>Multitouch input</short>
		<long>Use multitouch screens trough tuio protocol to drive various plugins</long>
		<category>Accessibility</category>
		<display>
			<group>
				<short>Key Bindings</short>
				<option name="toggle_annotate" type="key">
					<short>Toggle annotate</short>
					<long>Toggle using annotate plugin to draw on the screen.</long>
					<default>&lt;Super&gt;F9</default>
				</option>
				<option name="toggle_ripple" type="key">
					<short>Toggle ripple</short>
					<long>Toggle using water plugin to draw ripples effect on the screen.</long>
					<default>&lt;Super&gt;F10</default>
				</option>
			</group>
		</display>
		<screen>
			<group>
				<short>Tuio handling</short>
				<option name="toggle_tuio" type="key">
					<short>Toggle raw tuio parsing</short>
					<long>Toggle raw tuio parsing instead receiving commands from shared memory.</long>
					<default>&lt;Super&gt;F8</default>
				</option>
				<option name="port" type="int">
					<short>Tuio Port</short>
					<long>Tuio Port on which we should listen for the messages.</long>
					<default>3333</default>
					<min>1024</min>
					<max>65535</max>
				</option>
				<subgroup>
					<short>Forwarding messages</short>
					<option name="toggle_forw" type="bool">
						<short>Toggle tuio forwarding</short>
						<long>Toggle forwarding of tuio messages to other port.</long>
						<default>true</default>
					</option>
					<option name="fwdport" type="int">
						<short>Tuio fwd Port</short>
						<long>Port on which tuio messages are forwarded.</long>
						<default>3300</default>
						<min>1024</min>
						<max>65535</max>
					</option>
				</subgroup>
			</group>
		</screen>
	</plugin>
</compiz>
